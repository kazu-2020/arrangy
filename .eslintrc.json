//https://eslint.vuejs.org/rules/
{
  "env": {
      "browser": true,
      "es6": true
  },
  "extends": [
      "eslint:recommended",
      "plugin:vue/base",
      // ここからVue２系用
      "plugin:vue/essential",
      "plugin:vue/strongly-recommended",
      "plugin:vue/recommended",
      // ここまで
      "prettier"
  ],
  "parserOptions": {
      "ecmaVersion": 12,
      "sourceType": "module"
  },
  "plugins": [
      "vue"
  ],
  "rules": {
      "vue/attribute-hyphenation": ["warn", "never"],
      "vue/prop-name-casing": ["warn", "snake_case"]
  }
}